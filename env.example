# Application Settings
APP_ENV=production
SECRET_KEY=changeme-in-production
ENCRYPTION_KEY=changeme-encryption-key

# Database
DATABASE_URL=postgresql://postgres:password@db:5432/mqtt2yandex

# MQTT
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Yandex OAuth (get from Yandex OAuth app)
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret
YANDEX_REDIRECT_URI=https://your-domain.com/api/v1/yandex/callback

# YAPI Settings
YAPI_URL=http://yapi:8080

# Admin User
ADMIN_USER=admin
ADMIN_PASS=supersecret

# Traefik Settings
TRAFFIC_HOST=mqtt2yandex.example.com
ACME_EMAIL=admin@example.com

# Optional: Yandex2MQTT Settings
YANDEX2MQTT_ENABLED=true

# Optional: YAPI Settings
YAPI_ENABLED=true

# Optional: pgAdmin Settings
PGADMIN_ENABLED=false
